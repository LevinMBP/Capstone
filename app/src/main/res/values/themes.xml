    <style name="Theme.NoteMaster" parent="Base.Theme.NoteMaster" />

    <style name="SignupTextInputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_purple</item>
